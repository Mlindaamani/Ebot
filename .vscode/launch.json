{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch & Profile built-in server",
      "type": "php",
      "request": "launch",
      "noDebug": true,
      "profile": true,
      "runtimeArgs": ["-S", "localhost:8000", "-t", "."],
      "port": 9003,
      "serverReadyAction": {
        "action": "openExternally"
      }
    },

    {
      "name": "Launch built-in server",
      "type": "php",
      "request": "launch",
      "runtimeArgs": ["-S", "localhost:8000", "-t", "."],
      "port": 9003,
      "serverReadyAction": {
        "action": "openExternally"
      }
    },

    {
      "name": "Launch built-in server and debug",
      "type": "php",
      "request": "launch",
      "runtimeArgs": ["-S", "localhost:8000", "-t", "."],
      "port": 9003,
      "serverReadyAction": {
        "action": "openExternally"
      }
    },

    {
      "name": "Listen for Xdebug",
      "type": "php",
